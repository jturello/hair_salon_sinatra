
<h1><%= @page_title %></h1>

<a href="/stylists/<%= @stylist.id %>/clients/new">Add a Client</a>

<h3>Update <%= @stylist.name %>'s Information</h3>

<form action="/stylists/<%= @stylist.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <label for="new_name">Update Name:</label>
    <input id="new_name" name="new_name" type="text" placeholder="<%= @stylist.name() %>">
  </div>
  <div class="form-group">
    <label for="new_phone">Update Phone:</label>
    <input id="new_phone" name="new_phone" type="text" placeholder="<%= @stylist.phone() %>">
  </div>  <div class="form-group">
    <label for="new_location">Update Location:</label>
    <input id="new_location" name="new_location" type="text" placeholder="<%= @stylist.location() %>">
  </div>

  <button type="submit">Update</button>
</form>




<h1>Delete This Stylist</h1>
<form action="/stylists/<%= @stylist.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete</button>
</form>

<hr>

<% if @stylist.clients().any?() %>
<h1><%= @stylist.name %>'s client list:</h1>
  <ul>
    <% @stylist.clients().each() do |client| %>
      <li><a href="/clients/<%= client.id() %>"><%= client.name() %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>This stylist has no clients yet.</p>
<% end %>

<a href="/">home</a>
